<form id="document-create" autocomplete="off">
  <div class="form-group">
    <label>{{localize "Name"}}</label>
    <div class="form-fields">
      <input type="text" name="name" placeholder="{{defaultName}}" value="{{name}}" autofocus>
    </div>
  </div>

  {{#if hasFolders}}
    <div class="form-group">
      <label>{{ localize "DOCUMENT.Folder" }}</label>
      <div class="form-fields">
        <select name="folder">
          {{#select folder}}
            <option value=""></option>
            {{#each folders}}
              <option value="{{ this.id }}">{{ this.name }}</option>
            {{/each}}
          {{/select}}
        </select>
      </div>
    </div>
  {{/if}}

  <div class="type-selection flexcol">
    <header id='typeSelectionHeader'>{{localize "Type"}}</header>
    {{#each typesRadio}}
      <header class='type-group-label'>{{@key}}</header>
    <div class='form-fields'>
      {{radioBoxes 'type' this checked=../currentType}}
    </div>
      <span></span>
    {{/each}}
  </div>

  <div class="buttons">
    <button type="submit" class="create-document">
      <i class="fas fa-check"></i>
      {{localize "DOCUMENT.Create" type=(localize "DOCUMENT.Item")}}
    </button>
  </div>
</form>