<div class="item__left--main">
    <h3>{{localize "ED.General.coreData"}}</h3>
    {{!-- Power Step --}}
    <div class="item-data__input--line">
        <label class="label__left">{{localize "ED.Item.Power.powerStep"}}:</label>
        <input class="input__circle-input" name="system.powerStep" type="text" value="{{item.system.powerStep}}"
            data-dtype="Number">
    </div>
    {{!-- Power Step --}}
    <div class="item-data__input--line">
        <label class="label__left">{{localize "ED.Item.Power.damageStep"}}:</label>
        <input class="input__circle-input" name="system.damageStep" type="text" value="{{item.system.damageStep}}"
            data-dtype="Number">
    </div>
    {{!-- Strain --}}
    <div class="item-data__input--line">
        <label class="label__left">{{localize "ED.General.strainShort"}}:</label>
        <input class="input__circle-input" name="system.strain" type="text" value="{{item.system.strain}}"
            data-dtype="Number">
    </div>
    {{!-- Action --}}
    <div class="item-data__input--line">
        <label class="label__left">{{localize "ED.Item.Power.action"}}:</label>
        {{> "systems/ed4e/templates/global-templates/action-selector.hbs"}}
    </div>
</div>
<div class="item__right--main item-sheet__editor">
    <h3>{{localize "ED.Item.General.description"}}</h3>
    {{> "systems/ed4e/templates/global-templates/editor.hbs"}}
</div>