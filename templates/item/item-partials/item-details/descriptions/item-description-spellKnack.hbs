    <div class="item-data__input--line">
        <label class="label__left">{{localize "ED.Item.Spell.spellElement"}}:</label>
        <input class="input__number-input" name="system.spellElement.elementType" type="text" value="{{item.system.spellElement.elementType}}"
            data-dtype="String">
        <input class="input__number-input" name="system.spellElement.elementSubtype" type="text" value="{{item.system.spellElement.elementSubtype}}"
            data-dtype="String">
    </div>
</div>
<div class="item__right--main item-sheet__editor">
    <h3>{{localize "ED.Item.General.description"}}</h3>
