<div class="type-selection flexcol">
  <header id='typeSelectionHeader'>{{localize "Type"}}</header>
  {{#each typesRadio}}
    <header class='type-group-label {{@key}}'>{{formatTypeName @key}}</header>
    <div class='form-fields'>
      {{#each this}}
        <label>
          <input type="radio" name="type" value="{{this}}" {{#if (eq ../currentType this)}}checked{{/if}}>
          {{formatTypeName this}}
        </label>
      {{/each}}
    </div>
  {{/each}}
</div>
  <div class="buttons">
    <button type="submit" class="create-document">
      <i class="fas fa-check"></i>
      {{localize "DOCUMENT.Create" type=documentTypeLocalized}}
    </button>
  </div>
</form>