<form>
  <img src="systems/ed4e/assets/foundry/background-vasgothia-top-frame-small.png">
  <div>
    <div>
      <h3>
        <label>{{localize "ED.Header.activeUser"}}</label>
      </h3>
      {{#each actorUserActive}}
      <div>
        <input type="checkbox" name="{{this.atorId}}" {{checked this.actorId}}>
        {{this.actorName}}/{{this.playerName}}
      </div>
      {{/each}}
    </div>
    <div>
      <h3>
        <label>{{localize "ED.Header.inactiveUser"}}</label>
      </h3>
      {{#each actorUserInactive}}
      <div>
        <input type="checkbox" name="{{this.atorId}}">
        {{this.actorName}}/{{this.playerName}}
      </div>
      {{/each}}
    </div>
    <div>
      <h3>
        <label>{{localize "ED.Header.actorsNoUserConfigured"}}</label>
      </h3>
      {{#each actorsNoUserConfigured}}
      <div>
        <input type="checkbox" name="{{this.atorId}}">
        {{this.actorName}}
      </div>
      {{/each}}
    </div>
  </div>
  <div>
    <label> 'X-LPAmount' </label>
    <input type='number' id='legendPoints'></input>
  </div>
  <div>
    <label> 'X-Description'</label>
    <input type='string' id='description'></input>
  </div>


  <!-- Buttons -->
    <div class="buttons legend-point__history--earned-buttons flexcol">
        <div class="button-group buttons-navigation flexrow">
            <button class='ok default button-ok' type="confirm" name="confirm" data-button='ok'>
                {{ localize 'X-ok' }}
            </button>
        </div>

    </div>
    <img src="systems/ed4e/assets/foundry/background-vasgothia-top-frame-small.png">
</form>