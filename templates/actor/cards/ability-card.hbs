<div class="card__ability one-line__vertical-align">
    {{#if (uneq this.system.attribute "")}}
    <span class="card__icon rollable-icons">
        <img class="item__image" src="{{img}}" data-edit="img" title="{{name}}" height="25" width="25" />
        <img class="roll-icon__hover" src="icons/svg/d20-grey.svg">
        <img class="roll-icon__pointer rollable" src="icons/svg/d20-black.svg" data-attribute="{{@key}}">
        </span>
    {{else}} 
        {{#if (uneq this.system.strain 0)}}
        <span class="card__icon">
            <img class="item__image" src="{{img}}" data-edit="img" title="{{name}}" height="25" width="25" />
            <img class="roll-icon__hover blood" src="icons/svg/blood.svg">
            <img class="roll-icon__pointer take-strain" src="systems/ed4e/assets/icons/red-blood.svg" data-attribute="{{@key}}">
        </span>
        {{else}}
        <span class="card__icon">
            <img class="item__image--visible" src="{{img}}" title="{{name}}" height="25" width="25" />
        </span>
        {{/if}}
    {{/if}}
    <span class="card__name">
        {{name}}
    </span>
    <span class="card__action">
        <label>{{localize "X-Action"}}:</label>
        {{system.action}}
    </span>
    <span class="card__number">
        <label>{{localize "X-Rank"}}:</label>
        {{system.level}}
    </span>
    <span class="card__number">
        <label>{{localize "X-Step"}}:</label>
        TODO
    </span>
    <span class="card__number">
        <label>{{localize "X-Strain"}}:</label>
        {{system.strain}}
    </span>
    <span class="card__attribute">
        <label>{{localize "X-Attribute"}}:</label>
        {{system.attribute}}
    </span>   
    <span class="card__control">
        {{> "systems/ed4e/templates/global/card-options-enhance.hbs"}}
    </span>
</div>
<div class="card__description card__description--toggle">
    <span class="card__description--content">
        {{{system.description.value}}}
    </span>
    {{!-- <span class="card__description--effects">
        {{#each this.effects as |effects id|}}
            {{> "systems/ed4e/templates/item/cards/effect-card.hbs" effects }}
        {{/each}}
    </span> --}}
</div>