<div class="card__ability one-line__vertical-align">
    <span class="card__icon--visible">
        <img class="item__image--visible" src="{{img}}" data-edit="img" title="{{name}}" height="25" width="25" />
    </span>
    <span class="card__name">
        {{name}}
    </span>
    <span class="card__number">
        <label>{{localize "X-Rank"}}:</label>
        {{system.level}}
    </span> 
    <span class="card__control">
        {{> "systems/ed4e/templates/global/card-options-enhance.hbs"}}
    </span>
</div>
<div class="card__description card__description--toggle">
    <span class="card__description--content">
        {{{system.description.value}}}
    </span>
