<div>
    <h3>Legend Point Tracking</h3>
    <div>
        <h4>
            Legend Points and Status
        </h4>
        <button class="legend-point__history--earned">{{localize "ED.Buttons.X-Legend Point History - Earned"}}</button>
        <table>
            <tr>
                <th>Current LP</th>
                <th>spend LP</th>
                <th>total LP</th>
                <th>Legend Status</th>
            </tr>
            <tr class="legend-point__info">
                <td>
                    <input id="current-Lp" class="input__number-input-big legendPoints__current" type="text" name="system.legendPoints.current" value="{{actor.system.legendPoints.current}}">
                </td>
                <td>
                    <input id="spend-Lp" class="input__number-input-big legendPoints__spend" type="text" name="system.legendPoints.spend" value="{{actor.system.legendPoints.spend}}">
                </td>
                <td>
                    <input id="total-Lp" class="input__number-input-big legendPoints__total" type="text" name="system.legendPoints.total" value="{{actor.system.legendPoints.total}}">
                </td>
                <td>
                    <input class="input__number-input" type="text" name="system.legendPoints.status" value="{{actor.system.legendPoints.status}}">
                </td>
            </tr>
        </table>
    </div>
    <div>
