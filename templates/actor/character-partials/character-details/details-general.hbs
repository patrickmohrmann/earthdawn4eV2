                        <i class="enhancemente-2 fa fa-star"></i>
                        <i class="enhancemente-3 fa fa-star"></i>
                        {{/if}}
                    </div>
                </td>
                <td class="attribute__step--content">
                    <div>
                        <span class="attribute__step">
                            <input class="input__number-input" type="number" name="system.attributes.dex.step"
                                value="{{actor.system.attributes.dex.baseStep}}" readonly>
                        </span>
                    </div>
                </td>
                <td>
                    <input class="input__number-input" type="text" name="system.attributes.dex.timesIncreased"
                        value="{{actor.system.attributes.dex.timesIncreased}}">
                </td>
            </tr>
