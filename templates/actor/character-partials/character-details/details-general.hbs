                        <img class="image__border--none roll__icon" src="icons/svg/d20-grey.svg">
                    </a>
                </td>
                <td class="attribute__value--content">
                    <div>
                        <span class="attribute__value">
                            <input class="input__number-input" type="number" name="system.attributes.dex.value"
                                value="{{actor.system.attributes.dex.value}}">
                        </span>
                        {{#if (eq actor.system.attributes.dex.timesIncreased 1)}}
                        <i class="enhancemente-1 fa fa-star"></i>
                        {{/if}}
                        {{#if (eq actor.system.attributes.dex.timesIncreased 2)}}
                        <i class="enhancemente-1 fa fa-star"></i>
                        <i class="enhancemente-2 fa fa-star"></i>
                        {{/if}}
                        {{#if (eq actor.system.attributes.dex.timesIncreased 3)}}
